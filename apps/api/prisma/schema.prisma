generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Quiz {
  id          String     @id
  name        String
  description String?
  questions   Question[]
  createdAt   DateTime   @default(now())
}

model Question {
  id      String   @id
  quizId  String
  order   Int
  quiz    Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  text    String
  options Option[]
}

model Option {
  id         String   @id
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  text       String
  isCorrect  Boolean
}

model Admin {
  id        String    @id
  username  String    @unique
  password  String
  createdAt DateTime  @default(now())
  sessions  Session[]
}

model Session {
  id        String   @id
  adminId   String
  admin     Admin    @relation(fields: [adminId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model InviteCode {
  id        String   @id
  code      String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
}
