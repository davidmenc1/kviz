generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quiz {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  questions   Question[]
  createdAt   DateTime    @default(now())
  games       Game[]
}

model Game {
  id        Int       @id @default(autoincrement())
  quizId    Int
  quiz      Quiz      @relation(fields: [quizId], references: [id])
  teamId    Int
  team      Team      @relation(fields: [teamId], references: [id])
  createdAt DateTime  @default(now())

  answers   Answer[]   
}

model Question {
  id           Int       @id @default(autoincrement())
  quizId       Int
  order        Int
  quiz         Quiz      @relation(fields: [quizId], references: [id])
  text         String
  options      Option[]  
  answers      Answer[]  
}

model Option {
  id          Int       @id @default(autoincrement())
  questionId  Int
  question    Question  @relation(fields: [questionId], references: [id])
  text        String
  isCorrect   Boolean   
  answers     Answer[]  
}

model Team {
  id        Int        @id @default(autoincrement())
  name      String
  quizId    Int         
  games     Game[]      
  answers   Answer[]    
  createdAt DateTime    @default(now())
}

model Answer {
  id          Int        @id @default(autoincrement())
  teamId      Int
  team        Team       @relation(fields: [teamId], references: [id])
  gameId      Int
  game        Game       @relation(fields: [gameId], references: [id])
  questionId  Int
  question    Question   @relation(fields: [questionId], references: [id])
  optionId    Int?
  option      Option?    @relation(fields: [optionId], references: [id])
  customText  String?    
  createdAt   DateTime   @default(now())

  @@unique([teamId, questionId, gameId]) 
}
